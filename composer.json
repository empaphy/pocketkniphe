{
    "name": "empaphy/usephul",
    "description": "Provides useful classes and functions that extend the standard functionality of PHP.",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "empaphy/polyphill-php": "^1"
    },
    "require-dev": {
        "empaphy/dev": "^1@dev"
    },
    "autoload": {
        "files": [
            "src/constants.php",
            "src/functions.php"
        ],
        "psr-4": {
            "empaphy\\usephul\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
